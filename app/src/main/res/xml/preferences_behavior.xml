<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBoxPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_adv_cycle_traits_advances"
        android:key="CycleTraits"
        android:summary="@string/preferences_behavior_cycle_traits_description"
        android:title="@string/preferences_behavior_cycle_traits" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_remap_volume_buttons"
        android:key="VOLUME_NAVIGATION"
        android:summary="@string/preferences_behavior_volume_buttons_navigate_description"
        android:title="@string/preferences_behavior_volume_buttons_navigate" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_return_character"
        android:entryValues="@array/pref_return_character_values"
        android:icon="@drawable/ic_return_character"
        android:key="RETURN_CHARACTER"
        android:summary="%s"
        android:title="@string/preferences_behavior_return_character" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/disable_entry_arrows"
        android:entryValues="@array/disable_entry_arrows_values"
        android:icon="@drawable/ic_pref_behavior_disable_arrows"
        android:key="DISABLE_ENTRY_ARROW_NO_DATA"
        android:summary="%s"
        android:title="@string/preferences_behavior_disable_entry_arrow" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_adv_disable_file_sharing"
        android:key="DisableShare"
        android:summary="@string/preferences_general_share_disable_description"
        android:title="@string/preferences_general_share_disable" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_adv_use_day"
        android:key="UseDay"
        android:summary="@string/preferences_general_use_day_number_description"
        android:title="@string/preferences_general_use_day_number" />

    <ListPreference
        android:icon="@drawable/ic_adv_hide_entries"
        android:key="com.fieldbook.tracker.HIDE_ENTRIES"
        android:summary="@string/preferences_general_skip_entries_disabled"
        android:title="@string/preferences_general_skip_entries_with_data"
        android:entries="@array/pref_behavior_skip_entries_entries"
        android:entryValues="@array/pref_behavior_skip_entries_values"
        android:defaultValue="1"/>

    <CheckBoxPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_gesture_tap"
        android:key="FLIP_FLOP_ARROWS"
        android:summary="@string/preferences_general_flip_flop_arrows_description"
        android:title="@string/preferences_general_flip_flop_arrows" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:icon="@drawable/ic_repeat"
        android:key="REPEAT_OBSERVATIONS"
        android:summary="@string/preferences_behavior_repeat_observations_description"
        android:title="@string/preferences_behavior_repeat_observations" />

    <PreferenceCategory
        android:title="@string/pref_behavior_geonav_category_title"
        app:iconSpaceReserved="false">

        <CheckBoxPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_map_search"
            android:key="com.fieldbook.tracker.geonav.ENABLE_GEONAV"
            android:summary="@string/pref_geonav_enable_summary"
            android:title="@string/pref_geonav_enable_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_explore_black_24dp"
            android:key="com.fieldbook.tracker.geonav.GEONAV_COMPASS"
            android:summary="@string/pref_geonav_compass_summary"
            android:title="@string/pref_geonav_compass_title" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:icon="@drawable/ic_script_text_outline"
            android:key="com.fieldbook.tracker.geonav.GEONAV_LOG"
            android:summary="@string/pref_geonav_log_summary"
            android:title="@string/pref_geonav_log_title" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_geonav_search_angles"
            android:entryValues="@array/pref_geonav_search_angle_values"
            android:icon="@drawable/ic_compass_calibration_black_24dp"
            android:key="com.fieldbook.tracker.geonav.SEARCH_ANGLE"
            android:summary="@string/pref_geonav_search_angle_summary"
            android:title="@string/pref_geonav_search_angle_title" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_geonav_update_intervals"
            android:entryValues="@array/pref_geonav_update_interval_values"
            android:icon="@drawable/ic_hourglass_empty_black_24dp"
            android:key="com.fieldbook.tracker.geonav.UPDATE_INTERVAL"
            android:summary="@string/pref_geonav_update_interval_summary"
            android:title="@string/pref_geonav_update_interval_title" />

        <Preference
            android:icon="@drawable/ic_bluetooth_black_24dp"
            android:key="com.fieldbook.tracker.geonav.PAIR_BLUETOOTH"
            android:title="@string/pref_geonav_pair" />
    </PreferenceCategory>
</PreferenceScreen>