    <Preference
        android:icon="@drawable/ic_adv_brapi"
        android:key="pref_key_brapi_settings"
        android:title="@string/preferences_brapi"
        app:fragment="com.fieldbook.tracker.preferences.PreferencesFragmentBrapi" />

    <Preference
        android:icon="@drawable/ic_pref_database"
        android:key="pref_key_database_settings"
        android:title="@string/database_dialog_title"
        app:fragment="com.fieldbook.tracker.preferences.PreferencesFragmentDatabase" />

</androidx.preference.PreferenceScreen>