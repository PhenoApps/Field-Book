<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        android:icon="@drawable/ic_nav_drawer_person"
        android:key="pref_key_profile_settings"
        android:title="@string/settings_profile"
        app:fragment="com.fieldbook.tracker.preferences.PreferencesFragmentProfile" />

    <Preference
        android:icon="@drawable/ic_pref_general"
        android:key="pref_key_general_settings"
        android:title="@string/preferences_general_title"
        app:fragment="com.fieldbook.tracker.preferences.PreferencesFragmentGeneral" />

    <Preference
        android:icon="@drawable/ic_pref_appearance"
        android:key="pref_key_ui_settings"
        android:title="@string/preferences_appearance_title"
        app:fragment="com.fieldbook.tracker.preferences.PreferencesFragmentAppearance" />

    <Preference
        android:icon="@drawable/ic_pref_sounds"
        android:key="pref_key_sounds_settings"
        android:title="@string/preferences_sounds"
