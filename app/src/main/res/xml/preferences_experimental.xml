<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="experimental_settings_stable"
        android:title="@string/preferences_experimental_stable_title"
        app:iconSpaceReserved="false">

        <CheckBoxPreference android:key="com.tracker.fieldbook.preferences.keys.repeated_values"
            android:title="@string/pref_experimental_repeated_values_title"
            android:summary="@string/pref_experimental_repeated_values_summary"
            android:defaultValue="false"
            android:icon="@drawable/ic_repeated_measures"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="experimental_settings_beta"
        android:title="@string/preferences_experimental_beta_title"
        app:iconSpaceReserved="false">

        <CheckBoxPreference android:key="com.tracker.fieldbook.preferences.keys.enable_field_audio"
            android:title="@string/pref_experimental_enable_field_audio_title"
            android:summary="@string/pref_experimental_enable_field_audio_summary"
            android:defaultValue="false"
            android:icon="@drawable/ic_tb_field_mic_on"/>


        <CheckBoxPreference
            android:defaultValue="false"
            android:icon="@drawable/qrcode_scan"
            android:key="com.tracker.fieldbook.preferences.keys.mlkit"
            android:summary="@string/pref_beta_mlkit_summary"
            android:title="@string/pref_beta_mlkit_title" />

    </PreferenceCategory>

    <PreferenceCategory
    android:key="experimental_settings_alpha"
    android:title="@string/preferences_experimental_alpha_title"
    app:iconSpaceReserved="false">

        <CheckBoxPreference android:key="com.tracker.fieldbook.preferences.keys.enable_individual_field_page"
            android:title="@string/pref_beta_enable_individual_field_page_title"
            android:summary="@string/pref_beta_enable_individual_field_page_summary"
            android:defaultValue="false"
            android:icon="@drawable/ic_page_next_outline"/>

    </PreferenceCategory>

</PreferenceScreen>