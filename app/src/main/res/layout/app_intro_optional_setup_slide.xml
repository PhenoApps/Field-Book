<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/AppIntroDefaultHeading"
        android:id="@+id/slide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="" />

    <TextView
        style="@style/AppIntroDefaultText"
        android:id="@+id/slide_summary"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.fieldbook.tracker.views.OptionalSetupItem
            android:id="@+id/load_sample_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.fieldbook.tracker.views.OptionalSetupItem
            android:id="@+id/enable_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.fieldbook.tracker.views.OptionalSetupItem
            android:id="@+id/high_contrast_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>