<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/collapsible_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                tools:src="@drawable/ic_ruler"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTextView"
                    style="@style/TextViewStyle.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Trait Format Details"/>

                <TextView
                    android:id="@+id/subtitleTextView"
                    style="@style/TextViewStyle.Sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Numeric"/>
            </LinearLayout>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/completenessChart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"/>

            <ImageView
                android:id="@+id/expand_collapse_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_down"/>
        </LinearLayout>

        <!-- Collapsible Content -->
        <LinearLayout
            android:id="@+id/collapsible_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <!-- Format Details Layout -->
            <LinearLayout
                android:id="@+id/formatDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/defaultValueText"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    tools:text="Default Value: 0"/>

                <TextView
                    android:id="@+id/minValueText"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    tools:text="Minimum Value: 0"/>

                <TextView
                    android:id="@+id/maxValueText"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    tools:text="Maximum Value: 100"/>

                <TextView
                    android:id="@+id/categoriesText"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    tools:text="Categories: Red/Green/Blue"/>

                <TextView
                    android:id="@+id/detailsText"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    tools:text="Details: Additional information about this trait"/>
            </LinearLayout>

            <!-- Charts -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/histogram"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"/>

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/noChartAvailableTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/field_trait_chart_no_data"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>