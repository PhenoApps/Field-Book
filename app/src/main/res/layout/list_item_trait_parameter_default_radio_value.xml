<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/cell"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_trait_parameter_title"
        style="@style/TextViewStyle.Bold.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/traits_create_value_default" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/list_item_trait_parameter_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="false">

        <RadioGroup
            android:id="@+id/dialog_new_trait_default_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/traits_create_false" />

            <RadioButton
                android:id="@+id/radio_unset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/traits_create_unset" />

            <RadioButton
                android:id="@+id/radio_true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/traits_create_true" />

        </RadioGroup>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>