<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/cell"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_item_trait_parameter_title"
        style="@style/TextViewStyle.Bold.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/trait_parameter_decimal_places" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/list_item_trait_parameter_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/decimal_places_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_no_restriction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/trait_parameter_decimal_places_no_restriction"
                    android:textSize="14sp"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radio_integer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/trait_parameter_decimal_places_integer_only"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/max_decimal_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trait_parameter_decimal_places_allowed"
                    android:textSize="14sp" />

            </RadioGroup>

            <LinearLayout
                android:id="@+id/decimal_input_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/trait_parameter_decimal_places_custom"/>

                <EditText
                    android:id="@+id/max_decimal_edit_text"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:hint="@string/trait_parameter_decimal_places_custom_hint"
                    android:inputType="number"
                    android:maxLength="2"
                    android:textSize="14sp"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>