<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/BLACK"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/act_camera_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.camera.view.PreviewView
        android:id="@+id/act_camera_pv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="H,3:4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.fieldbook.tracker.ui.BarcodeOverlayView
        android:id="@+id/barcode_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/act_camera_pv"
        app:layout_constraintBottom_toBottomOf="@id/act_camera_pv"
        app:layout_constraintStart_toStartOf="@id/act_camera_pv"
        app:layout_constraintEnd_toEndOf="@id/act_camera_pv"
        android:visibility="visible" />

    <!-- View Media button (left of capture) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/FloatingActionButtonStyle.SmallTraitButtons"
        android:id="@+id/camerax_view_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:padding="0dp"
        app:srcCompat="@drawable/multimedia"
        app:maxImageSize="@dimen/fb_trait_fab_image_size_small"
        app:useCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="@id/camerax_capture_btn"
        app:layout_constraintEnd_toStartOf="@id/camerax_capture_btn"
        android:contentDescription="@string/trait_camera_view_media_content_description" />

    <!-- Capture button (center) - positioned above toggle -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/FloatingActionButtonStyle.TraitButtons"
        android:id="@+id/camerax_capture_btn"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_margin="8dp"
        android:padding="0dp"
        app:srcCompat="@drawable/camera_24px"
        app:maxImageSize="@dimen/fb_trait_fab_image_size"
        app:useCompatPadding="true"
        android:tint="@color/BLACK"
        app:layout_constraintBottom_toTopOf="@id/media_mode_toggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:contentDescription="@string/trait_camera_capture_content_description" />

    <!-- Switch camera button (right of capture) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/FloatingActionButtonStyle.SmallTraitButtons"
        android:id="@+id/camerax_switch_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:padding="0dp"
        app:srcCompat="@drawable/orbit_variant"
        app:maxImageSize="@dimen/fb_trait_fab_image_size_small"
        app:useCompatPadding="true"
        android:tint="@color/BLACK"
        app:layout_constraintBottom_toBottomOf="@id/camerax_capture_btn"
        app:layout_constraintStart_toEndOf="@id/camerax_capture_btn"
        android:contentDescription="@string/trait_camera_switch_content_description" />

    <!-- Small icon-only three-state toggle placed above the bottom edge; capture FAB sits above it -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/media_mode_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_photo"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_trait_camera"
            app:iconTint="@android:color/white"
            android:contentDescription="@string/media_photo"
            android:text="" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_video"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/video"
            app:iconTint="@android:color/white"
            android:contentDescription="@string/media_video"
            android:text="" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_audio"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/trait_audio"
            app:iconTint="@android:color/white"
            android:contentDescription="@string/media_audio"
            android:text="" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</androidx.constraintlayout.widget.ConstraintLayout>