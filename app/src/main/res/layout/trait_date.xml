<?xml version="1.0" encoding="utf-8"?>
<com.fieldbook.tracker.traits.DateTraitLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/datePick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FloatingActionButtonStyle.TraitButtons"
                android:id="@+id/minusDateBtn"
                android:layout_width="@dimen/fb_trait_fab_size"
                android:layout_height="@dimen/fb_trait_fab_size"
                android:layout_margin="8dp"
                android:gravity="center|center_vertical"
                android:contentDescription="@string/trait_date_minus_content_description"
                android:src="@drawable/minus" />

            <TextView
                android:id="@+id/datePreviewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Preview Date"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FloatingActionButtonStyle.TraitButtons"
                android:id="@+id/addDateBtn"
                android:layout_width="@dimen/fb_trait_fab_size"
                android:layout_height="@dimen/fb_trait_fab_size"
                android:layout_margin="8dp"
                android:gravity="center"
                android:contentDescription="@string/trait_date_add_content_description"
                android:src="@drawable/ic_plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FloatingActionButtonStyle.TraitButtons"
                android:id="@+id/trait_date_calendar_visibility_btn"
                android:layout_width="@dimen/fb_trait_fab_size"
                android:layout_height="@dimen/fb_trait_fab_size"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:contentDescription="@string/trait_date_calendar_picker_content_description"
                android:src="@drawable/ic_event_black_24dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FloatingActionButtonStyle.TraitButtons"
                android:id="@+id/enterBtn"
                android:layout_width="@dimen/fb_trait_fab_size"
                android:layout_height="@dimen/fb_trait_fab_size"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:src="@drawable/trait_date_save"
                android:contentDescription="@string/trait_date_save_button_content_description" />
        </LinearLayout>

    </LinearLayout>

</com.fieldbook.tracker.traits.DateTraitLayout>

