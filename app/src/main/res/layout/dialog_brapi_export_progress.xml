<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/progress_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/brapi_export_progress_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Circular progress indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/overall_progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:progress="0"
        app:indicatorColor="@color/main_primary"
        app:indicatorSize="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_title"
        app:trackColor="@color/main_primary_transparent"
        app:trackThickness="8dp" />

    <TextView
        android:id="@+id/overall_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/overall_progress_indicator"
        app:layout_constraintEnd_toEndOf="@id/overall_progress_indicator"
        app:layout_constraintStart_toStartOf="@id/overall_progress_indicator"
        app:layout_constraintTop_toTopOf="@id/overall_progress_indicator" />

    <!-- Status section -->
    <TextView
        android:id="@+id/status_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/brapi_export_status"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/overall_progress_indicator" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/status_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/status_header" />

    <!-- Current operation details -->
    <TextView
        android:id="@+id/current_operation_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/brapi_export_current_operation"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/status_recycler_view" />

    <TextView
        android:id="@+id/current_operation_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/brapi_export_preparing"
        app:layout_constraintTop_toBottomOf="@id/current_operation_label" />

    <!-- Cancel button -->
    <Button
        android:id="@+id/cancel_export_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_operation_details" />

</androidx.constraintlayout.widget.ConstraintLayout>