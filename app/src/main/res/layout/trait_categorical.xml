<?xml version="1.0" encoding="utf-8"?>
<com.fieldbook.tracker.traits.CategoricalTraitLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categoricalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    xmlns:tools="http://schemas.android.com/tools"
    tools:visibility="visible">

    <androidx.recyclerview.widget.RecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/catGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4"
        tools:itemCount="8"
        tools:listitem="@layout/trait_category_button"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</com.fieldbook.tracker.traits.CategoricalTraitLayout>