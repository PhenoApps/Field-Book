<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/expanded_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/field_creator_expanded_preview_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/expanded_field_summary_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expanded_title_text" />

    <LinearLayout
        android:id="@+id/expanded_progress_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/expanded_create_field_button"
        app:layout_constraintTop_toBottomOf="@id/expanded_field_summary_text"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/expanded_progress_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:indeterminate="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/field_creator_preview_creating_field"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:gravity="center" />
    </LinearLayout>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/expanded_field_preview_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expanded_field_summary_text"
        app:layout_constraintBottom_toTopOf="@id/expanded_create_field_button"
        android:layout_marginBottom="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/expanded_create_field_button"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/field_creator_preview_create_button"
        android:textColor="?attr/fb_color_text_high_contrast_inverted"
        android:background="@drawable/cell"
        android:backgroundTint="?attr/fb_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>